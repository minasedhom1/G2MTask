<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.g2mtask.FacebookTasksFrag">

    <!-- TODO: Update blank fragment layout -->
    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/user_name_tv"
        app:layout_constraintVertical_bias="0.815" />

    <ImageView
        android:id="@+id/prof_img_view"
        android:layout_width="80dp"
        android:layout_height="83dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="113dp"
        android:layout_height="23dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="17dp"
        android:text="Login First"
        android:gravity="center"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prof_img_view" />

    <Button
        android:id="@+id/select_img_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select IMG"
        android:layout_marginLeft="33dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="190dp" />

    <ImageView
        android:id="@+id/share_image_view"
        android:layout_width="143dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/com_facebook_auth_dialog_cancel_background"
        app:layout_constraintLeft_toRightOf="@+id/select_img_btn"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.361"
        app:layout_constraintTop_toTopOf="@+id/select_img_btn"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/share_img_btn"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/share_img_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share IMG"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/select_img_btn"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/select_img_btn"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/select_img_btn"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>
